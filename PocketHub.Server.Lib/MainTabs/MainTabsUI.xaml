<UserControl x:Class="PocketHub.Server.Lib.MainTabs.MainTabsUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sdk="clr-namespace:Repo2.SDK.WPF45.UserControls;assembly=Repo2.SDK.WPF45"
             xmlns:local="clr-namespace:PocketHub.Server.Lib.MainTabs"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <sdk:NonReloadingTabControl ItemsSource="{Binding Tabs}"
                                    SelectedIndex="{Binding SelectedTabIndex}"
                                    >
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
        </sdk:NonReloadingTabControl>

    </Grid>
</UserControl>
