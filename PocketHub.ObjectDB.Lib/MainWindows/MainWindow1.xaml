<Window x:Class="PocketHub.ObjectDB.Lib.MainWindows.MainWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:pHub="clr-namespace:PocketHub.Client.Lib.UserInterfaces.MainTabs;assembly=PocketHub.Client.Lib"
        xmlns:int="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:wbhv="clr-namespace:Repo2.SDK.WPF45.ControlBehaviors.WindowBehaviors;assembly=Repo2.SDK.WPF45"
        xmlns:xtk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:tray="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:PocketHub.ObjectDB.Lib.MainWindows"
        mc:Ignorable="d"
        Title="{Binding Caption}" 
        Width="900" Height="728"
        WindowStartupLocation="CenterScreen"
        SnapsToDevicePixels="True"
        Closing="Window_Closing"
        >
    <Window.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Repo2.SDK.WPF45;component/Styles/BasicDatagridTheme1.xaml" />
                <ResourceDictionary Source="/Repo2.SDK.WPF45;component/Styles/DatagridTheme2.xaml" />
                <ResourceDictionary Source="/Repo2.SDK.WPF45;component/Styles/FontAwesomeButtonTheme1.xaml" />
                <ResourceDictionary Source="/Repo2.SDK.WPF45;component/Styles/ConvertersSet1.xaml" />
                <ResourceDictionary Source="/Repo2.SDK.WPF45;component/Styles/NonReloadingTabControlTheme1.xaml" />
                <ResourceDictionary Source="/Repo2.SDK.WPF45;component/Styles/ButtonsTheme1.xaml" />
                <ResourceDictionary Source="/Repo2.SDK.WPF45;component/Styles/TextBlockTheme1.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Window.Resources>
    <int:Interaction.Behaviors>
        <wbhv:DraggableBehavior />
    </int:Interaction.Behaviors>
    <Grid>

        <pHub:MainTabsUI Margin="0,10,0,0" />

        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Margin="0,7,10,0"
                    >

            <TextBlock Text="..."
                       />

            <Menu Background="Transparent"
                  FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}"
                  >
                <MenuItem Header="_File">
                    <MenuItem Header="E_xit"
                              Command="{Binding ExitCmd}"
                              />
                </MenuItem>
                <MenuItem Header="_Edit" />
                <MenuItem Header="_View" />
                <MenuItem Header="_Help" />
            </Menu>

        </StackPanel>


        <xtk:BusyIndicator IsBusy="{Binding IsBusy}"
                           BusyContent="{Binding BusyText}"
                           />

        <tray:TaskbarIcon IconSource="/PocketHub.ObjectDB.Lib;component/Icons/database128.ico"
                          TrayLeftMouseUp="TaskbarIcon_TrayLeftMouseUp"
                          ToolTipText="Object DB Hub"
                          />
    </Grid>
</Window>
