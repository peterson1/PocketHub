<UserControl x:Class="PocketHub.Client.Lib.UserInterfaces.Logging.ActivityLogUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lbhv="clr-namespace:Repo2.SDK.WPF45.ControlBehaviors.ListBoxBehaviors;assembly=Repo2.SDK.WPF45"
             xmlns:local="clr-namespace:PocketHub.Client.Lib.UserInterfaces.Logging"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ListBox ItemsSource="{Binding Rows}"
                 lbhv:ScrollOnChangeBehavior.ScrollOnNewItem="True"
                 x:Name="lboxRows"
                 />
    </Grid>
</UserControl>
